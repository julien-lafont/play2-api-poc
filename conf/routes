# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                           controllers.Application.index

GET     /api/v1/members                             controllers.api.Members.profile
PUT     /api/v1/members/checkSubscription           controllers.api.Members.checkSubscription
POST    /api/v1/members/subscribe                   controllers.api.Members.subscribe
PUT     /api/v1/members/update                      controllers.api.Members.updateMyProfil
POST    /api/v1/members/authenticate                controllers.api.Members.authenticate
GET     /api/v1/members/search                      controllers.api.Members.search(login: Option[String], firstName: Option[String], lastName: Option[String], sex: Option[String], city: Option[String], age: Option[Int], page: Option[Int], per_page: Option[Int])

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
